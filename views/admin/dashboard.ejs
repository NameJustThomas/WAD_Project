<!--
 * Admin Dashboard (EJS Full Code)
 * Dynamically rendered with data from adminController.js
-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FASHION - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 col-lg-2 col-xl-2 bg-light sidebar">
                <%- include('partials/sidebar', { path: '/admin/orders' }) %>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 col-lg-10 col-xl-10">
                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value">$24,569</div>
                        <div class="stat-label">TOTAL SALES</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">394</div>
                        <div class="stat-label">TOTAL ORDERS</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">1,829</div>
                        <div class="stat-label">TOTAL CUSTOMERS</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">$54.32</div>
                        <div class="stat-label">AVERAGE ORDER VALUE</div>
                    </div>
                </div>

                <!-- Main Content Grid -->
                <div class="main-grid">
                    <!-- Sales Overview -->
                    <div class="chart-section">
                        <div class="section-title">SALES OVERVIEW</div>
                        <div class="chart-container">
                            <canvas id="salesChart"></canvas>
                        </div>
                    </div>

                    <!-- Top Products -->
                    <div class="progress-section">
                        <div class="section-title">TOP PRODUCTS</div>
                        <div class="progress-item">
                            <div class="progress-label">
                                <span>PRODUCT A</span>
                                <span>75%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: 75%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="progress-label">
                                <span>PRODUCT B</span>
                                <span>62%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: 62%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="progress-label">
                                <span>PRODUCT C</span>
                                <span>48%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: 48%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="progress-label">
                                <span>PRODUCT D</span>
                                <span>31%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: 31%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom Grid -->
                <div class="bottom-grid">
                    <!-- Recent Activity -->
                    <div class="activity-section">
                        <div class="section-title" style="color: white;">RECENT ACTIVITY</div>
                        <div class="activity-item">
                            <div class="activity-icon"></div>
                            <span>NEW ORDER FROM CUSTOMER</span>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon"></div>
                            <span>PRODUCT RESTOCKED</span>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon"></div>
                            <span>ORDER SHIPPED</span>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon"></div>
                            <span>CUSTOMER SUPPORT</span>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon"></div>
                            <span>PAYMENT RECEIVED</span>
                        </div>
                    </div>

                    <!-- Recent Orders -->
                    <div class="orders-section">
                        <div class="section-title">RECENT ORDERS</div>
                        <div class="order-item">
                            <span>ORDER #1234</span>
                            <span>$124.99</span>
                        </div>
                        <div class="order-item">
                            <span>ORDER #1235</span>
                            <span>$89.50</span>
                        </div>
                        <div class="order-item">
                            <span>ORDER #1236</span>
                            <span>$156.75</span>
                        </div>
                        <div class="order-item">
                            <span>ORDER #1237</span>
                            <span>$93.25</span>
                        </div>
                        <div class="order-item">
                            <span>ORDER #1238</span>
                            <span>$178.00</span>
                        </div>
                        <div class="order-item">
                            <span>ORDER #1239</span>
                            <span>$67.99</span>
                        </div>
                    </div>

                    <!-- Sales Distribution -->
                    <div class="sales-distribution">
                        <div class="section-title">SALES DISTRIBUTION</div>
                        <div class="donut-chart">
                            <canvas id="donutChart" width="150" height="150"></canvas>
                        </div>
                        <div style="font-size: 0.8rem; color: #666;">
                            <div>● ONLINE SALES</div>
                            <div>● RETAIL SALES</div>
                            <div>● WHOLESALE</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Action Button -->
    <button class="floating-action">
        <i class="fas fa-plus"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Sales',
                    data: [12000, 19000, 15000, 25000, 22000, 30000],
                    borderColor: '#d81b60',
                    backgroundColor: 'rgba(216, 27, 96, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(216, 27, 96, 0.1)' }
                    },
                    x: { grid: { display: false } }
                }
            }
        });

        const donutCtx = document.getElementById('donutChart').getContext('2d');
        new Chart(donutCtx, {
            type: 'doughnut',
            data: {
                labels: ['Online', 'Retail', 'Wholesale'],
                datasets: [{
                    data: [60, 30, 10],
                    backgroundColor: ['#d81b60', '#f06292', '#f8bbd9'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }
            }
        });

        document.querySelector('.floating-action').addEventListener('click', function() {
            alert('Add new item!');
        });
    </script>
</body>
</html>
