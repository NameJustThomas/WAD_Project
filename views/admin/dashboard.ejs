<!--
 * Admin Dashboard (EJS Full Code)
 * Dynamically rendered with data from adminController.js
-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .stats-grid, .main-grid, .bottom-grid {
            display: grid;
            gap: 20px;
            margin-top: 20px;
        }
        .stats-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }
        .main-grid {
            grid-template-columns: 2fr 1fr;
        }
        .bottom-grid {
            grid-template-columns: 2fr 1fr 1fr;
        }
        .stat-card {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
        .stat-value {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .stat-label {
            font-size: 0.9rem;
            color: #888;
        }
        .section-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .progress-item, .order-item, .activity-item {
            margin-bottom: 15px;
        }
        .progress-label, .order-item {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container-fluid">
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value">$<%= totalRevenue %></div>
                <div class="stat-label">TOTAL REVENUE</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= totalOrders %></div>
                <div class="stat-label">TOTAL ORDERS</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= completedOrders %></div>
                <div class="stat-label">COMPLETED ORDERS</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= pendingOrders %></div>
                <div class="stat-label">PENDING ORDERS</div>
            </div>
        </div>

        <!-- Main Grid -->
        <div class="main-grid">
            <!-- Sales Overview Chart -->
            <div class="card p-3">
                <div class="section-title">SALES OVERVIEW</div>
                <canvas id="salesChart" height="200"></canvas>
            </div>

            <!-- Top Products -->
            <div class="card p-3">
                <div class="section-title">TOP PRODUCTS</div>
                <% topProducts.forEach(product => { %>
                    <div class="progress-item">
                        <div class="progress-label">
                            <span><%= product.name %></span>
                            <span>$<%= product.formatted_price %></span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: <%= product.percentage || 50 %>%"></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Bottom Grid -->
        <div class="bottom-grid">
            <!-- Recent Orders -->
            <div class="col-md-4 mb-4">
                <div class="card p-3">
                    <div class="section-title">RECENT ORDERS</div>
                    <% if (recentOrders && recentOrders.length > 0) { %>
                        <% recentOrders.forEach(order => { %>
                            <div class="order-item">
                                <div>
                                    <strong>ORDER #<%= order.id %></strong><br />
                                    <small><%= order.formatted_date %></small>
                                </div>
                                <div class="text-end">
                                    <span>$<%= order.formatted_amount %></span>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div>No recent orders found.</div>
                    <% } %>
                </div>
            </div>

            <!-- Users & Categories -->
            <div class="card p-3">
                <div class="section-title">SYSTEM SUMMARY</div>
                <p><strong>Products:</strong> <%= totalProducts %></p>
                <p><strong>Categories:</strong> <%= totalCategories %></p>
                <p><strong>Users:</strong> <%= totalUsers %></p>
            </div>

            <!-- Sales Distribution Donut -->
            <div class="card p-3">
                <div class="section-title">SALES DISTRIBUTION</div>
                <canvas id="donutChart" height="150"></canvas>
            </div>
        </div>
    </div>

    <script>
        // Sales Chart
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(monthlySales.map(s => s.month)) %>,
                datasets: [{
                    label: 'Monthly Sales',
                    data: <%- JSON.stringify(monthlySales.map(s => s.total)) %>,
                    borderColor: '#d81b60',
                    backgroundColor: 'rgba(216, 27, 96, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                }
            }
        });

        // Donut Chart
        const donutCtx = document.getElementById('donutChart').getContext('2d');
        new Chart(donutCtx, {
            type: 'doughnut',
            data: {
                labels: ['Online', 'Retail', 'Wholesale'],
                datasets: [{
                    data: [60, 30, 10],
                    backgroundColor: ['#d81b60', '#f06292', '#f8bbd9'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: true } }
            }
        });
    </script>
</body>
</html>
