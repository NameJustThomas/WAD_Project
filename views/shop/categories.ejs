<!--
 * Categories Listing Page
 * Purpose: Display product categories
 * Layout: Styled like the "Browse by Dress Style" section
 -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Online Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <%- include('../partials/topbar') %>
    <%- include('../partials/navbar') %>

    <!-- Categories -->
    <section class="categories-section py-5">
        <div class="container bg-light p-4 rounded-3 shadow-sm">
            <h2 class="text-center mb-4 fw-bold">Browse by Dress Style</h2>

            <div class="row gx-4 gy-4 justify-content-center align-items-center">
                <% if (categories.length >= 8) { %>
                    <!-- First Row -->
                    <div class="d-flex justify-content-center category-row flex-wrap">
                        <div class="category-box small-box mx-2 my-2">
                            <a href="/categories/<%= categories[0].id %>" class="category-link">
                                <h4 class="category-title">CASUAL</h4>
                                <img src="<%= categories[0].image || '/images/casual.jpg' %>" class="img-fluid category-img" alt="Casual" />
                            </a>
                        </div>
                        <div class="category-box large-box mx-2 my-2">
                            <a href="/categories/<%= categories[1].id %>" class="category-link">
                                <h4 class="category-title">FORMAL</h4>
                                <img src="<%= categories[1].image || '/images/formal.jpg' %>" class="img-fluid category-img" alt="Formal" />
                            </a>
                        </div>
                    </div>

                    <!-- Second Row -->
                    <div class="d-flex justify-content-center category-row flex-wrap">
                        <div class="category-box large-box mx-2 my-2">
                            <a href="/categories/<%= categories[2].id %>" class="category-link">
                                <h4 class="category-title">PARTY</h4>
                                <img src="<%= categories[2].image || '/images/party.jpg' %>" class="img-fluid category-img" alt="Party" />
                            </a>
                        </div>
                        <div class="category-box small-box mx-2 my-2">
                            <a href="/categories/<%= categories[3].id %>" class="category-link">
                                <h4 class="category-title">GYM</h4>
                                <img src="<%= categories[3].image || '/images/gym.jpg' %>" class="img-fluid category-img" alt="Gym" />
                            </a>
                        </div>
                    </div>

                    <!-- Third Row -->
                    <div class="d-flex justify-content-center category-row flex-wrap">
                        <div class="category-box small-box mx-2 my-2">
                            <a href="/categories/<%= categories[4].id %>" class="category-link">
                                <h4 class="category-title">SUMMER</h4>
                                <img src="<%= categories[4].image || '/images/summer.jpg' %>" class="img-fluid category-img" alt="Summer" />
                            </a>
                        </div>
                        <div class="category-box large-box mx-2 my-2">
                            <a href="/categories/<%= categories[5].id %>" class="category-link">
                                <h4 class="category-title">WINTER</h4>
                                <img src="<%= categories[5].image || '/images/winter.jpg' %>" class="img-fluid category-img" alt="Winter" />
                            </a>
                        </div>
                    </div>

                    <!-- Fourth Row -->
                    <div class="d-flex justify-content-center category-row flex-wrap">
                        <div class="category-box large-box mx-2 my-2">
                            <a href="/categories/<%= categories[6].id %>" class="category-link">
                                <h4 class="category-title">STREET</h4>
                                <img src="<%= categories[6].image || '/images/street.jpg' %>" class="img-fluid category-img" alt="Street" />
                            </a>
                        </div>
                        <div class="category-box small-box mx-2 my-2">
                            <a href="/categories/<%= categories[7].id %>" class="category-link">
                                <h4 class="category-title">VINTAGE</h4>
                                <img src="<%= categories[7].image || '/images/vintage.jpg' %>" class="img-fluid category-img" alt="Vintage" />
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <p class="text-center">Not enough categories to display the full layout. Please add more categories.</p>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
