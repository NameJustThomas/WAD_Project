<% if (!user) { %>
  <!-- Top Signup Banner -->
  <div id="signup-banner" style="display: flex; align-items: center; justify-content: space-between; width: 100%; height: 40px; background: black; padding: 0 100px;">
    <div style="margin: auto; flex: 1; text-align: center;">
      <span style="color: white; font-size: 14px; font-family: 'Jack Frost'; font-weight: 700;">
        Sign up and get 20% off your first order.
      </span>
      <a href="/register" style="color: white; font-size: 14px; font-family: 'Jack Frost'; font-weight: 400; text-decoration: underline; margin-left: 5px;">
        Sign Up Now
      </a>
    </div>
    <!-- Close Button -->
    <div style="cursor: pointer; padding-left: 10px;" onclick="closeSignupBanner()">
      <i class="fas fa-times" style="color: white;"></i>
    </div>
  </div>
<% } %>
