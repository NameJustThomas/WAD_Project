<% if (!user) { %>
  <!-- Top Signup Banner -->
  <div style="width: 100%; height: 38px; background: black; overflow: hidden; position: relative;">
    <div style="text-align: center; padding-top: 9px;">
      <span style="color: white; font-size: 14px; font-family: 'Integral CF', sans-serif; font-weight: 700;">
        Sign up and get 20% off your first order.
      </span>
      <a href="/register" style="color: white; font-size: 14px; font-family: 'Integral CF', sans-serif; font-weight: 400; text-decoration: underline; margin-left: 5px;">
        Sign Up Now
      </a>
    </div>
    <!-- Close Button (Font Awesome X) -->
    <div style="position: absolute; right: 10px; top: 9px; cursor: pointer;" onclick="this.closest('div').style.display='none'">
      <i class="fas fa-times" style="color: white;"></i>
    </div>
  </div>
<% } %>
